ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# NIST API Configuration (if applicable)
NIST_API_KEY=
NIST_API_BASE_URL=https://services.nvd.nist.gov/rest/json
