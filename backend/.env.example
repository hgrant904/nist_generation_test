# Application
APP_NAME=NIST Reports API
APP_DESCRIPTION=API for automating NIST security report generation
APP_VERSION=0.1.0
ALLOWED_ORIGINS=http://localhost:3000

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=nist
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Ollama
# Base URL to the Ollama server; used by the backend to connect
OLLAMA_HOST=http://ollama
OLLAMA_PORT=11434
# Default model to use for conversations
OLLAMA_MODEL=llama3.1:8b
# Optional performance tuning
OLLAMA_NUM_PARALLEL=2
